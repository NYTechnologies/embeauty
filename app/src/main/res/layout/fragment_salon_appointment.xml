<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".fragment.SalonAppointmentFragment">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/titleAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="agendamentos"
            android:textColor="#FD76A9"
            android:textSize="22sp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/appointmentsCalendar"
            android:layout_width="wrap_content"
            android:layout_height="288dp" />

        <Button
            android:id="@+id/buttonAppointment"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FF4081"
            android:text="Novo Agendamento" />

        <ListView
            android:id="@+id/listSalonAppointments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/appointments_list_item"/>

    </LinearLayout>

</FrameLayout>
