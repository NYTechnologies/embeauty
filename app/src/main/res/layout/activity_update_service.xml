<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="8dp"
    tools:context=".view.salon.NewServiceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_service_name_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:endIconMode="clear_text"
            app:helperText="Nome do Serviço">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_service_name_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_light"
                android:inputType="text"
                android:maxLength="20"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--        &lt;!&ndash; Duração &ndash;&gt;
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_service_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Duração em minutos"
                    app:endIconMode="clear_text"
                    app:helperText="Duração do serviço (min)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_service_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray_light"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>-->

        <!-- Preço -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_service_price_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:helperText="Preço do serviço">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_service_price_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_light"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_update_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:padding="16dp"
            android:text="Editar Serviço" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
